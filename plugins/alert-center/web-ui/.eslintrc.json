{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:vue/vue3-essential",
        "standard",
        "./.eslintrc-auto-import.json"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "rules": {
        "prefer-regex-literals": 0,
        "vue/multi-word-component-names": 0,
        "no-control-regex": 0,
        "indent": ["error", 4],
        "quotes": 0,
        "comma-dangle": 0,
        "semi": 0,
        "dot-notation": 0,
        "space-before-function-paren": 0,
        "prefer-const": 0,
        "no-trailing-spaces": 0,
        "func-call-spacing": 0
    },
    "ignorePatterns": ["src/**/*.d.ts"]
}
